<!DOCTYPE html>
<html>
    <head>
        <!-- META DATA -->
        <meta charset="UTF-8">
        <meta name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=0'>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="description" content="Dashplex – Symfony Bootstrap 5 Admin & Dashboard Template">
        <meta name="author" content="Spruko Technologies Private Limited">
        <meta name="keywords" content="admin, admin dashboard, dashboard, symfony, symfony admin, symfony admin dashboard, symfony admin template, symfony bootstrap, symfony bootstrap 5, symfony dashboard, symfony dashboard template, symfony frameworks, symfony php, symfony template, symfony ui">
        
        <!-- TITLE -->
		<title> Dashplex – Symfony Bootstrap 5 Admin & Dashboard Template </title>
        {% block stylesheets %}
        {{ include('layouts/styles.html.twig') }}
    
        {% endblock %}

    </head>
    <body  class="main-body leftmenu ltr light-theme dark-menu">

        <!-- GLOBAL-LOADER -->
        <div id="global-loader">
            <img src="{{absolute_url(asset('build/img/loader.svg'))}}" class="loader-img" alt="Loader">
        </div>
        <!-- /GLOBAL-LOADER -->

        <!-- PAGE -->
        <div class="page">

            <!-- MAIN-HEADER -->
            {{ include('layouts/main-header.html.twig') }}
            <!-- MAIN-HEADER CLOSED -->
            
            <!-- APP-SIDEBAR -->
            {{ include('layouts/main-sidebar.html.twig') }}
            <!-- APP-SIDEBAR CLOSED-->

            <!-- MAIN CONTENT -->
            <div class="main-content side-content pt-0">
                <div class="main-container container-fluid">
                    <div class="inner-body">

                            <!-- CONTENT -->
                            {% block body %}

                            {% endblock %}
                            
                            <!-- CONTENT CLOSED-->

                    </div>
                </div>
            </div>
            <!-- MAIN CONTENT CLOSED-->
            
            <!-- COUNTRY-SELECTOR-MODAL -->
            {{ include('layouts/modal.html.twig') }}
            <!-- END COUNTRY-SELECTOR-MODAL -->

            <!-- RIGHT-SIDEBAR  -->
            {{ include('layouts/right-sidebar.html.twig') }}
            <!-- END RIGHT-SIDEBAR -->

            <!-- MAIN-FOOTER -->
            {{ include('layouts/main-footer.html.twig') }}
            <!-- MAIN-FOOTER CLOSED-->
        </div>

        {% block javascripts %}    
        {{ include('layouts/scripts.html.twig') }}
        
        {% endblock %} 
        
    </body>
</html>
